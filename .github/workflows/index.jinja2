    <script>
      // Sets the (negative) text indent on list items to be exactly equal to the first "word" and
      // the following space, along with corresponding padding on the list item. This can't be done
      // in CSS up front (at least, not easily) because the first word is an emoji, and different
      // browsers render these differently, e.g. Safari and Chrome.
      //
      // Not the most robust thing, e.g. if there child HTML elements won't work
      (() => {
        const init = () => {
          const lis = Array.from(document.getElementsByTagName('li'));

          lis.forEach((li) => {
              const text = li.childNodes[0].nodeValue
              const lenLeadingWord = text.match(/^\S+\s+/)[0].length;
              const leadingWord = text.substring(0, lenLeadingWord);
              li.childNodes[0].nodeValue = text.substring(lenLeadingWord);
              const span = document.createElement('span');
              span.classList.add('li-emoji');
              span.innerText = leadingWord;
              li.prepend(span);
          });

          const setIndent = () => {
            lis.forEach((li) => {
              const width = li.childNodes[0].getBoundingClientRect().width;
              li.style.textIndent = -1 * width + 'px';
              li.style.paddingLeft = width + 'px';
            });
          }

          setIndent();
          window.addEventListener("resize", setIndent);
        }

        document.addEventListener("DOMContentLoaded", init);
      })();

      // On some browsers (Safari) the font weight on the h1 element, which is 900, doesn't work,
      // and actually font weight of 700 is the boldest and roughly equivalent to 900 on Chrome
      // So try setting it to 700, and see if that makes it bolder
      (() => {
        const makeH1Bolder = () => {
          const h1 = document.getElementsByTagName('h1')[0];

          const rangeOriginal = document.createRange();
          rangeOriginal.setStart(h1.childNodes[0], 0);
          rangeOriginal.setEnd(h1.childNodes[0], h1.childNodes[0].length);
          const widthOriginal = rangeOriginal.getBoundingClientRect().width;
          const weightOriginal = h1.style.fontWeight;

          h1.style.fontWeight = 700;
          const rangeNew = document.createRange();
          rangeNew.setStart(h1.childNodes[0], 0);
          rangeNew.setEnd(h1.childNodes[0], h1.childNodes[0].length);
          const widthNew = rangeOriginal.getBoundingClientRect().width;
          if (widthOriginal > widthNew) {
            h1.style.fontWeight = weightOriginal;
          }
        }

        document.addEventListener("DOMContentLoaded", makeH1Bolder);
      })();
